<resources>

    <color name="material_teal_600">#00897B</color>
    <color name="material_teal_200">#80CBC4</color>
    <color name="material_teal_800">#00695C</color>
    <color name="material_orange_A700">#FF6D00</color>
    <color name="material_grey_300_">#E0E0E0</color>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_teal_600</item>
        <item name="colorPrimaryDark">@color/material_teal_800</item>
        <item name="colorAccent">@color/material_orange_A700</item>
        <item name="android:windowBackground">@color/material_teal_200</item>
        <item name="android:textColor">@color/material_grey_300_</item>
        <item name="android:alertDialogTheme">@style/MyDialogTheme</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/material_teal_200</item>
        <item name="android:textColorPrimary">@color/material_grey_300_</item>
        <item name="colorAccent">@color/material_orange_A700</item>
        <item name="android:checkboxStyle">@style/MyCheckbox</item>
    </style>

    <style name="MyCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">@color/material_orange_A700</item>
        <item name="android:textColorSecondary">@color/material_grey_300_</item>
    </style>

</resources>
