<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.steveq.qroclock_20.presentation.activities.ScannerActivity"
    android:orientation="vertical"
    android:id="@+id/rootLinearLayout">

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/scannerBarcodeView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ToggleButton
        android:id="@+id/configureToggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOn="@string/wake_up_qr"
        android:textOff="@string/configure_qr"
        android:checked="false"
        android:background="@color/material_teal_600"
        android:textColor="@color/material_teal_800"
        android:layout_margin="8dp"/>

</LinearLayout>
